{
  "compilerOptions": {
    "lib": ["ES2016", "DOM"],
    "module": "CommonJS",
    "target": "ES2015",
    "outDir": "dist",
    "moduleResolution": "Node",
    "declaration": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
  },
  "files": ["src/index.ts"]
}
